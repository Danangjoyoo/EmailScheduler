                    "content": {
                        "application/json":{
                            "schema":{
                                "title": "CreateEmail",
                                "type": "object",
                                "properties": {
                                    "name":{
                                        "title": "name",
                                        "type": "string",
                                        "maximum": 100
                                    },
                                    "address":{
